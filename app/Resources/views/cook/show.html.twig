{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cook</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cook.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cook.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cook_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cook_edit', { 'id': cook.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
