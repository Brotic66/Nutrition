{% extends 'base.html.twig' %}

{% block body %}
    <h1>Plans list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plan in plans %}
            <tr>
                <td><a href="{{ path('*_show', { 'id': plan.id }) }}">{{ plan.id }}</a></td>
                <td>{{ plan.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('*_show', { 'id': plan.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('*_edit', { 'id': plan.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('*_new') }}">Create a new plan</a>
        </li>
    </ul>
{% endblock %}
